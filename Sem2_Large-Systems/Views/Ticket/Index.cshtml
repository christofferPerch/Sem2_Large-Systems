@model IEnumerable<Sem2_Large_Systems.Models.Ticket>

<h2>Tickets</h2>

<!-- Add a button to create a new ticket -->
<a href="@Url.Action("SubmitTicket", "Ticket")" class="btn btn-primary mb-3">Create Ticket</a>

<!-- Table to display all tickets -->
<table class="table">
    <thead>
        <tr>
            <th>Driver Name</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.DriverName</td>
                <td>@ticket.Status</td>
                <td>
                    <!-- "Send Job" button -->
                    @if (ticket.Status == "Pending")
                    {
                        <form asp-action="SendJob" asp-route-id="@ticket.Id" method="post" style="display:inline">
                            <button type="submit" class="btn btn-primary">Send Job</button>
                        </form>
                    }
                    else
                    {
                        <span class="badge badge-success">Job Sent</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
