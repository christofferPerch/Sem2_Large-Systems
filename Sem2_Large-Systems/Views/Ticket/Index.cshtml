@model IEnumerable<Sem2_Large_Systems.Models.Ticket>

<h2>Tickets</h2>

<!-- Add a button to create a new ticket -->
<a href="@Url.Action("SubmitTicket", "Ticket")" class="btn btn-primary mb-3">Create Ticket</a>

<!-- Table to display all tickets -->
<table class="table">
    <thead>
        <tr>
            <th>Driver Name</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.DriverName</td>
                <td>@ticket.Status</td>
                <td>
                    <!-- Add any other actions related to tickets, e.g., Send Job button -->
                    <a href="@Url.Action("Details", "Ticket", new { id = ticket.Id })" class="btn btn-info">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
