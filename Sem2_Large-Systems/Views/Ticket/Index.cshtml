@model IEnumerable<Sem2_Large_Systems.Models.Ticket>

@{
    ViewData["Title"] = "Tickets List";
}

<h2>All Tickets</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ticket ID</th>
            <th>Driver Name</th>
            <th>Chemical Type</th>
            <th>Quantity</th>
            <th>Arrival Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.TicketID</td>
                    <td>@ticket.DriverName</td>
                    <td>@ticket.ChemicalType</td>
                    <td>@ticket.Quantity</td>
                    <td>@ticket.ArrivalDate.ToShortDateString()</td>
                    <td>@ticket.Status</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@ticket.TicketID" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@ticket.TicketID" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No tickets available</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="SubmitTicket" class="btn btn-primary">Submit New Ticket</a>
